<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jdwstudio.jared.smart_house">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jdwstudio.jared.smart_house.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.jdwstudio.jared.smart_house.GateOpenerActivity"
            android:label="@string/title_gate_opener"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.jdwstudio.jared.smart_house.RoomControllerActivity"
            android:label="@string/title_activity_room"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.jdwstudio.jared.smart_house.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.jdwstudio.jared.smart_house.GarageOpenerActivity"
            android:label="@string/title_activity_garage_opener"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>